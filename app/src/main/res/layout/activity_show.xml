<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maverick.applications.healthongo.ShowActivity">
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/custom_text_size_large_material"
            android:textStyle="bold"
            android:background="#C82027"
            android:textColor="#FFFFFF"
            android:text="Marathon Walk"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="@dimen/custom_text_size_large_material"
            android:textStyle="bold"
            android:background="#B3B3B3"
            android:text="Fastest Milestone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="@dimen/custom_text_size_large_material"
            android:textStyle="bold"
            android:background="#141A4F"
            android:textColor="#FFFFFF"
            android:text="Lose-by Pound"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
